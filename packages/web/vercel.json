{
	"rewrites": [
		{
			"source": "/(.*)",
			"destination": "/index.html"
		}
	],
	"headers": [
		{
			"source": "/sitemap.xml",
			"headers": [
				{
					"key": "Content-Type",
					"value": "application/xml"
				},
				{
					"key": "Cache-Control",
					"value": "public, max-age=86400, s-maxage=86400"
				}
			]
		},
		{
			"source": "/robots.txt",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=86400, s-maxage=86400"
				}
			]
		},
		{
			"source": "/assets/(.*)",
			"headers": [
				{
					"key": "Cache-Control",
					"value": "public, max-age=31536000, immutable"
				}
			]
		},
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				}
			]
		}
	]
}